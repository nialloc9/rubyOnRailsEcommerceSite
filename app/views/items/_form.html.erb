<%= form_with(model: item, local: true) do |form| %>

  <div class="ui grid container stackable" style="margin-top: 100px;">
    
    <% if item.errors.any? %>
      <div class="row">
        <div id="error_explanation">
          <div class="header"><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</div>
    
          <div>
            <% item.errors.full_messages.each do |message| %>
              <div class="ui message error"><%= message %></div>
            <% end %>
          </div>
          
        </div>
      </div>
    <% end %>
    
    <div class="row">
        <div class="ui labeled input">
          <div class="ui label">
            Name
          </div>
          <%= form.text_field :name, id: :item_name, :placeholder => "Name" %>
        </div>
    </div>
    
    <div class="row">
      <div class="ui labeled input">
          <div class="ui label">
            Description
          </div>
          <%= form.text_field :description, id: :item_description, :placeholder => "Name" %>
      </div>
    </div>
    
    <div class="row">
      <div class="ui labeled input">
          <div class="ui label">
            Image url
          </div>
          <%= form.text_field :image_url, id: :item_image_url, :placeholder => "Image url" %>
      </div>
    </div>
    
    <div class="row">
      <div class="ui labeled input">
          <div class="ui label">
            Price
          </div>
          <%= form.text_field :price, id: :item_price, :placeholder => "Price" %>
      </div>
    </div>
    
    <div class="row" style="display: none;">
      <%= form.label :created_at %>
      <%= form.datetime_select :created_at, id: :item_created_at %>
    </div>
  
    <div class="row" style="display:none;">
      <%= form.label :updated_at %>
      <%= form.datetime_select :updated_at, id: :item_updated_at %>
    </div>
  
    <div class="row">
      <div >
        <%= form.submit "Submit", :class => "ui button blue" %>
      </div>
    </div>
    
  </div>

<% end %>